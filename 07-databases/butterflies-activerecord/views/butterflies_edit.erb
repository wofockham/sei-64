<h1>Edit butterfly</h1>

<form action="/butterflies/<%= @butterfly["id"] %>" method="post">
    <label>
        Name:
        <input name="name" required placeholder="Monarch" value="<%= @butterfly["name"] %>">
    </label>

    <label>
        Family:
        <input name="family" placeholder="Skipper" value="<%= @butterfly["family"] %>">
    </label>

    <label>
        Image:
        <input type="url" name="image" value="<%= @butterfly["image"] %>">
    </label>

    <button>Update butterfly</button>
</form>
