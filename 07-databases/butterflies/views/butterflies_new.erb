<h1>New butterfly</h1>

<form action="/butterflies" method="post">
    <label>
        Name:
        <input name="name" required placeholder="Monarch">
    </label>

    <label>
        Family:
        <input name="family" placeholder="Skipper">
    </label>

    <label>
        Image:
        <input type="url" name="image">
    </label>

    <button>Create butterfly</button>
</form>
