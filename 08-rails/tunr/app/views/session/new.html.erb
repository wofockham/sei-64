<h1>Login</h1>

<% if flash[:error].present? %>
    <h2><%= flash[:error] %></h2>
<% end %>

<%= form_tag login_path do %>
    <%= label_tag :email %>
    <%= email_field_tag :email %>

    <%= label_tag :password %>
    <%= password_field_tag :password %>

    <%= submit_tag "Sign in" %>
<% end %>
